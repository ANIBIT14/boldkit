      "content": "<script setup lang=\"ts\">\nimport { cn } from '@/lib/utils'\n\ndefineProps<{\n  class?: string\n}>()\n</script>\n\n<template>\n  <h3 :class=\"cn('text-xl font-bold uppercase tracking-wide', $props.class)\">\n    <slot />\n  </h3>\n</template>\n",
      "type": "registry:ui",
      "target": "components/ui/LayeredCardTitle.vue"
